{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len":  ["error", { "code": 120 }],
        "no-alert": 0,
        "no-console": 0,
        "no-param-reassign": 0,
        "no-use-before-define": 0,
        "max-classes-per-file": 0,
        "react/prop-types": 0,
        "react/destructuring-assignment": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ]
    },
    "parser": "babel-eslint"
}